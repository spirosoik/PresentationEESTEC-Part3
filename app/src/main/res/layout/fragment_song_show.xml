<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollSongShow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible"
    >

  <!-- GridView -->

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

    <ImageView
        android:id="@+id/avatar"
        style="@style/AppTheme.Image.SongShow"
        />


    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <TextView
          android:id="@+id/trackName"
          android:textSize="20sp"
          style="@style/AppTheme.SongShowTitle"
          />

      <TextView
          android:id="@+id/trackArtistName"
          android:textSize="18sp"
          style="@style/AppTheme.SongShowTitle"
          />
    </LinearLayout>


    <RelativeLayout
        style="@style/AppTheme.SongShowInformationPanel"
        >
      <ImageView
          android:id="@+id/iconGenre"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/ic_library_music_black_24dp"
          />
      <TextView
          android:id="@+id/tvGenreName"
          style="@style/AppTheme.SongShowInformationTitle"
          android:layout_toRightOf="@+id/iconGenre"
          />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />

    <RelativeLayout
        style="@style/AppTheme.SongShowInformationPanel"
        >
      <ImageView
          android:id="@+id/iconListen"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/ic_headset_black_24dp"
          />
      <TextView
          android:id="@+id/tvListenLink"
          style="@style/AppTheme.SongShowInformationTitle"
          android:layout_toRightOf="@+id/iconListen"
          android:text="@string/txt_radiostation_label"
          />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />

    <RelativeLayout
        style="@style/AppTheme.SongShowInformationPanel"
        >
      <ImageView
          android:id="@+id/iconArtistUrl"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/ic_public_black_24dp"
          />
      <TextView
          android:id="@+id/tvLinkArtist"
          style="@style/AppTheme.SongShowInformationTitle"
          android:layout_toRightOf="@+id/iconArtistUrl"
          android:text="@string/txt_artisturl_label"
          />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />

    <RelativeLayout
        style="@style/AppTheme.SongShowInformationPanel"
        >
      <ImageView
          android:id="@+id/iconMoney"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_attach_money_black_24dp"
          />
      <TextView
          android:id="@+id/tvTrackPrice"
          style="@style/AppTheme.SongShowInformationTitle"
          android:layout_toRightOf="@+id/iconMoney"
          />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />
  </LinearLayout>
</ScrollView>